extends layout

block content
  div.container
    form.form-signin
      h2.form-signin-heading Please sign in
      label.sr-only(for="username") Email address
      input#username.form-control(type="text",placeholder="username",required="",autofocus="")
      label.sr-only(for="inputPassword") Password
      input#inputPassword.form-control(type="password",placeholder="Password",required="")
      div.checkbox
        label
          input#remenberme(type="checkbox",value="remember me")
          label(for="remenberme") Remember me
      button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
